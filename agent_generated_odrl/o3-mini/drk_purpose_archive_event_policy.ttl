drk:ArchiveArtifactAccessOffer a odrl:Offer ;
    dct:title "ArchiveArtifact Access Offer" ;
    dct:description "The M端nzkabinett Museum permits access to specified ArchiveArtifact datasets only when the declared purpose is an instance of an ArchiveEvent." ;
    dct:issued "2023-10-04"^^xsd:date ;

    odrl:permission [
        a odrl:Permission ;
        odrl:action odrl:read ;
        odrl:target drk:ArchiveArtifact ;
        odrl:assigner drk:M端nzkabinettMuseum ;
        
        odrl:constraint [
            a odrl:Constraint ;
            odrl:leftOperand odrl:purpose ;
            odrl:operator odrl:isA ;
            odrl:rightOperand "ArchiveEvent"^^xsd:string
        ]
    ] .

drk:ArchiveArtifact a odrl:Asset, dct:ResourceType ;
